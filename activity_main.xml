<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout">

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:text="start"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="343dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:text="cancel"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="343dp" />

        <Button
            android:id="@+id/button_result"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:text="result"
            tools:layout_editor_absoluteX="278dp"
            tools:layout_editor_absoluteY="343dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="72dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="55dp"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/textView_plus"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="80dp"
        android:layout_height="72dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="55dp"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="300dp"
        android:layout_height="290dp"
        android:layout_marginStart="8dp"
        android:stretchColumns="0,1,2,"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_7"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="3dp"
                android:padding="0dp"
                android:text="7"
                android:textSize="35dp" />

            <Button
                android:id="@+id/button_8"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="3dp"
                android:text="8"
                android:textSize="35dp" />

            <Button
                android:id="@+id/button_9"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="3dp"
                android:text="9"
                android:textSize="35dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_4"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="3dp"
                android:padding="0dp"
                android:text="4"
                android:textSize="35dp" />

            <Button
                android:id="@+id/button_5"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="3dp"
                android:text="5"
                android:textSize="35dp" />

            <Button
                android:id="@+id/button_6"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="3dp"
                android:text="6"
                android:textSize="35dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_1"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="3dp"
                android:padding="0dp"
                android:text="1"
                android:textSize="35dp" />

            <Button
                android:id="@+id/button_2"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="3dp"
                android:text="2"
                android:textSize="35dp" />

            <Button
                android:id="@+id/button_3"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="3dp"
                android:text="3"
                android:textSize="35dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_0"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="3dp"
                android:text="0"
                android:textSize="35dp" />

            <Button
                android:id="@+id/button_back"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="3dp"
                android:text="Ã—"
                android:textSize="35dp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="34dp"
        android:text="+"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_input"
        android:layout_width="133dp"
        android:layout_height="58dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="44dp"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView_timer"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_score" />

    <TextView
        android:id="@+id/textView_score"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:background="#F1F0F0"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="69dp"
        android:layout_height="58dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="34dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        android:text="20"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="13dp"
        android:gravity="center|left"
        android:text="score"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textView_score"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:gravity="center|left"
        android:text="time"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textView_timer"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>