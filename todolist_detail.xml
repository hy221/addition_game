<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83CCC4"
    android:gravity="center">

    <EditText
        android:id="@+id/editText_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="#4AFFFFFF"
        android:paddingVertical="7dp"
        android:paddingHorizontal="3dp"
        android:gravity="left"
        android:hint="Title"
        android:inputType="textPersonName"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/Button_back"
        tools:layout_editor_absoluteX="16dp" />

    <ImageButton
        android:id="@+id/button_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/Button_Time"
        app:layout_constraintEnd_toStartOf="@+id/textView_cal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_title"
        app:srcCompat="@drawable/calendar_today_24" />

    <MultiAutoCompleteTextView
        android:id="@+id/textView_detail"
        android:layout_width="379dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="56dp"
        android:background="#4AFFFFFF"
        android:gravity="top"
        android:hint="Memo"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_Time" />

    <TextView
        android:id="@+id/textView_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="52dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:textSize="11dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_notification"
        app:layout_constraintTop_toBottomOf="@+id/editText_title" />

    <ImageButton
        android:id="@+id/Button_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="#00FFFFFF"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_notification"
        app:srcCompat="@drawable/access_time_24" />

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="37dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:textStyle="bold"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/Button_Time"
        app:layout_constraintTop_toBottomOf="@+id/textView_cal" />

    <ImageButton
        android:id="@+id/button_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/done_outline_24" />

    <ImageButton
        android:id="@+id/Button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chevron_left_24" />

    <!--
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="102dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_detail"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#00FFFFFF"
        tools:srcCompat="@drawable/circle_red" />
        -->
</androidx.constraintlayout.widget.ConstraintLayout>